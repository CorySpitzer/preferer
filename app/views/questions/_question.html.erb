<div id="<%=question.id %>" class="row">
  <div class="col-md-8">
    <h3>
      Would you rather:
    </h3>
    <div class="row">
      <div class="col-md-5">
        <div class="question-choice">
          <div id="question_<%=question.id%>_option_a_link_container">
            <%= link_to question_path(question, question: { option_a_count: question.option_a_count + 1}),
                                id: "question_#{question.id}_option_a_link", method: :patch, remote: true do %>
              <%= image_tag question.image_a.url(:medium), class: "image" %>
            <% end %>
          </div>
          <h4 id="question_<%=question.id%>_option_a" class="text-center">
            <%= question.option_a %>
          </h4>
        </div>
      </div>
      <div class="col-md-2">
        <h4 id="question_<%=question.id%>_votes" class="text-center">
          or
        </h4>
      </div>
      <div class="col-md-5">
        <div class="question-choice">
          <div id="question_<%=question.id%>_option_b_link_container">
            <%= link_to question_path(question, question: { option_b_count: question.option_b_count + 1}),
                              id: "question_#{question.id}_option_b_link", method: :patch, remote: true do %>
              <%= image_tag question.image_b.url(:medium), class: "image" %>
            <% end %>
          </div>
          <h4 id="question_<%=question.id%>_option_b" class="text-center">
            <%= question.option_b %>
          </h4>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <%= render "comments/form", question: question %>
  </div>
</div>
<hr>
